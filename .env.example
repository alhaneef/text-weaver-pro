
# GitHub Configuration (Required for production)
VITE_GITHUB_OWNER=your-github-username
VITE_GITHUB_REPO=textweaver-data
VITE_GITHUB_TOKEN=your-github-personal-access-token
VITE_GITHUB_BRANCH=main

# Cloudinary Configuration (For file uploads)
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_CLOUDINARY_API_SECRET=your-api-secret

# SMTP Configuration (For emails)
VITE_SMTP_ENDPOINT=https://your-smtp-service.com/send
VITE_SMTP_FROM=noreply@textweaverpro.com

# Paystack Configuration (For payments)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
VITE_PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# Google Gemini AI Configuration (For PDF extraction)
VITE_GEMINI_API_KEY=your-gemini-api-key

# Application Configuration
VITE_APP_NAME=TextWeaver Pro
VITE_APP_URL=https://textweaverpro.com
VITE_SUPPORT_EMAIL=support@textweaverpro.com

# Regional Pricing (Nigeria vs International)
VITE_NIGERIA_PAGE_PRICE=10
VITE_INTERNATIONAL_PAGE_PRICE=0.10
VITE_NIGERIA_TEXT_PRICE=5
VITE_INTERNATIONAL_TEXT_PRICE=0.05

# Feature Flags
VITE_ENABLE_PAYSTACK=true
VITE_ENABLE_AI_EXTRACTION=true
VITE_ENABLE_EMAIL_VERIFICATION=false
